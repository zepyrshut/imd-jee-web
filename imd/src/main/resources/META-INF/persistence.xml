    <class>com.arelance.domain.UsuarioTieneActividad</class>
    <class>com.arelance.domain.EntrenadorTieneActividad</class>
    <class>com.arelance.domain.Paypal</class>
    <class>com.arelance.domain.Tarjeta</class>
    <class>com.arelance.domain.Transferencia</class>
    <class>com.arelance.domain.PagoUsuarioPaypal</class>
  </persistence-unit>
</persistence>
